%p
  .heading
    = tr("Revisions", "view/revisions/_revisions")
  - @idea.idea_revisions.by_recently_created.each_with_index do |revision,i|
    %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
      %tr
        %td{:valign => "top", :width => "24"}
          = render :partial => "users/pic", :locals => {:user => revision.user}
        %td{:style => "padding-left: 5px;", :valign => "top"}
          = link_to_unless_current "Revised #{time_ago(revision.created_at)} #{i==0 ?  "(current)" : ""}", idea_idea_revision_url(@idea,revision)
    %p
