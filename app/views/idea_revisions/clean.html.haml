= render :partial => "ideas/header"
.col-group
  .col-1
    .col-content
      &nbsp;
  .col-11
    .col-content
      %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %tr
          %td{:valign => "top"}
            - if @idea.idea_revision_id != @revision.id
              %p
              .notice
                = tr("Here's what this idea looked like {time_ago}. You can also <a href='{revision_url}'>see the changes</a> in this version from the previous one.", "view/idea_revisions/clean", :revision_url => idea_idea_revision_url(@idea,@revision), :time_ago => time_ago(@revision.created_at))
            %p
            .idea_description_detail
              = @revision.description_html
            %p
            .idea_description_detail
              = @revision.notes_html
          %td{:style => "padding-left: 20px;", :valign => "top", :width => "150"}
            = render :partial => "idea_revisions/idea_revisions"
